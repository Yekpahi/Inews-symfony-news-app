{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}

	{% block stylesheets %}
		<link rel="stylesheet" href="{{ asset ('assets/css/security/inscription.css')}}"/>

	{% endblock %}

	<div class="container">
		{% for flashError in app.flashes('verify_email_error') %}
			<div class="alert alert-danger" role="alert">{{ flashError }}</div>
		{% endfor %}
		<form action="">
			{{ form_start(registrationForm) }}
			<div class="table">
				<div class="table-cell">
					<div class="modal">
						<div id="profile">
							<div class="dashes"></div>
							<label>Cliquez ou glissez votre image ici</label>
						</div>

						<div class="form-input">
							<h2>Renseignez ici vos informations</h2>
							<hr>
							<div class="civilite">
								{{ form_row(registrationForm.firstName, {'attr': {'placeholder': 'Prenom'}}) }}
								{{ form_row(registrationForm.lastName, {'attr': {'placeholder': 'Nom'}}) }}

							</div>

							<div class="adresse">
								{{ form_row(registrationForm.email, {'attr': {'placeholder': 'Email'}}) }}
								{{ form_row(registrationForm.plainPassword.first, {'attr': {'placeholder': 'Mot de passe'}}) }}
								{{ form_row(registrationForm.plainPassword.second, {'attr': {'placeholder': 'Confirmez le mot de passe'}}) }}

							</div>
							<hr>
							<div class="sexe">
								{{ form_row(registrationForm.agreeTerms) }}
							</div>
							<hr>
							<button type="submit">
								Validez
							</button>
						</div>
						<div class="otherAuth">
							<h4>
								Ou s'inscrire avec
							</h4>
							<img src="../assets/images/facebook.png" alt="">
							<img src="../assets/images/google.png" alt="">
						</div>
					</div>
				</div>
			</div>
			<input type="file" id="mediaFile"/>
			{{ form_end(registrationForm) }}
		</form>
	</div>
{% endblock %}

{% block javascripts %}
	<script src="{{ asset ('assets/script/security/inscription.js')}}"></script>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
	<script src="jquery-3.5.1.min.js"></script>

{% endblock %}
