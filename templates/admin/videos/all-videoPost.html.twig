{% extends 'base.html.twig' %}

{% block title %}Ajouter un video!
{% endblock %}


{% block body %}

	{% block stylesheets %}
		<link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
		<style>:root
		{
			--bordercolor: #ccc;
			--textcolor: rgba(0, 0, 0, 0.6);
			--buttonwidth: 40px;
			--iconopacity: 0.65;
			--letterspace: 0.02rem;
		}

		body {
			background: #f9f9f9;
			margin: 0;
			padding: 0;
			font-size: 16px;
		}
		* {
			margin: 0;
			padding: 0;
			font-size: inherit;
			font-family: "Roboto";
			text-shadow: none;
			letter-spacing: var(--letterspace);
			box-sizing: border-box;
		}
		.wrap {
			display: grid;
			grid-template-areas: "header header header header" "sidebar videos videos videos";
			grid-template-columns: 240px 1fr 1fr;
			position: relative;
		}

		/* Videos Section */
		.videos {
			grid-area: videos;
			display: grid;
			grid-template-columns: repeat(auto-fit, minmax(290px, 1fr));
			grid-gap: 15px;
			padding: 0 10px;
		}

		.videos h2 {
			grid-column: 1 / -1;
			padding: 35px 20px 0;
			font-size: 1.25rem;
			letter-spacing: 0.06rem;
		}

		.videos .video {
			display: grid;
			grid-template-columns: 55px 1fr;
			grid-gap: 5px;
			font-size: 1rem;
			align-items: center;
			cursor: pointer;
			margin-bottom: 35px;
		}

		.videos .video img {
			width: 100%;
		}

		.videos .video .avatar {
			padding: 4px;
			height: 100%;
		}

		.videos .video .thumbnail {
			grid-column: 1 / -1;
		}

		.videos .video .channel,
		.videos .video .details {
			grid-column: span 1 / -1;
			color: var(--textcolor);
			font-weight: bold;
			font-size: 0.8rem;
		}
		.videos .video .title {
			font-size: 0.9rem;
			font-weight: bold;
			line-height: 1.2;
		}

		@media(max-width: 700px) {
			.videos {
				grid-column: 1 / -1;
			}
		}
	</style>
{% endblock %}

<!-- Debut  header bar -->

<!-- Fin  header bar -->
<div class="wrapper">


	<section class="videos">
		<h2>Recommended</h2>
		{% for video in videoPost %}
			<div class="video">
				<img class="thumbnail" src="https://source.unsplash.com/290x163/?new&zealand" alt="">
				<img class="avatar" src="https://image.flaticon.com/icons/svg/145/145843.svg" width="224" height="224" alt="Man free icon" title="Man free icon">
				<a href="{{ path('admin_videoPost_details', {slug: video.slug})}}" class="title">Home - Day30 - Journey |
					{{ video.title|striptags|u.truncate(50, '...') }}</a>
				<p class="channel">{{ video.content|striptags|u.truncate(50, '...') }}</p>
				<p class="details">2K views - 11 hours ago</p>
			</div>
		{% endfor %}
	</section>
</div>{% endblock %}{% block javascripts %}

<script>
	const search_btn = document.querySelector('.top > .search_btn');
const back_btn = document.querySelector('.top > .back_btn');
const header = document.querySelector('.top');
search_btn.addEventListener('click', toggleSearchBox);
back_btn.addEventListener('click', toggleSearchBox);

function toggleSearchBox() {
if (header.classList.contains('search_active')) {
header.classList.remove('search_active');
} else {
header.classList.add('search_active');
}
}
const menuBtn = document.querySelector('.menu');
const wrapper = document.querySelector('.wrapper');
const sidebar_small = document.querySelector('.sidebar_small');
const sidebar = document.querySelector('.sidebar');
menuBtn.addEventListener('click', toggleSideMenu);

function toggleSideMenu() {
if (window.matchMedia('(max-width: 1300px)').matches) {
wrapper.classList.remove('menu_small');
if (wrapper.classList.contains('menu_overlay')) {
wrapper.classList.remove('menu_overlay');
} else {
wrapper.classList.add('menu_overlay');
}
} else {
wrapper.classList.remove('menu_overlay');
if (wrapper.classList.contains('menu_small')) {
wrapper.classList.remove('menu_small');
} else {
wrapper.classList.add('menu_small');
}
}
}
</script>{% endblock %}
