{% extends 'base.html.twig' %}

{% block title %}Génrer vos catégories
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	{% block header %}
		{% include "header/header.html.twig" %}
	{% endblock %}

	<div class="example-wrapper">
		<h1>Gestion de catégories ✅</h1>
		<button>
			<a href="{{ path('admin_categories_ajout')}}">Ajouter une catégorie!!</a>
		</button>
		<table class="table table-bordered">
			<thead>
				<tr>
					<th scope="col">ID</th>
					<th scope="col">Nom</th>
					<th scope="col">Parent</th>
					<th scope="col">Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for categorie in categories %}
					<tr>

						<td>{{ categorie.id }}</td>
						<td>{{ categorie.name }}</td>
						<td>{{ categorie.parent }}</td>
						<td>
							<button>
								<a href="{{ path('admin_categories_modifier', {id:categorie.id})}}">Modifier</a>
							</button>
						</td>
					</tr>
				{% endfor %}

			</tbody>
		</table>


	</div>
	<button>
		<a href="{{ path('admin_home')}}">Retour à la page d'accueil</a>
	</button>
{% endblock %}
