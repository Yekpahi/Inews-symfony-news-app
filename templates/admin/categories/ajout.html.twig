{% extends 'base.html.twig' %}

{% block title %}Ajouter une cat√©gorie
{% endblock %}

{% block body %}

	{% block stylesheets %}
		<link
		href="/your-path-to-fontawesome/css/all.css" rel="stylesheet">
		<!--load all styles -->
		<link rel="stylesheet" type="text/css" href=" {{asset ('assets/css/admin/categories/ajoutcategorie.css')}}"/>
		<link href="https://fonts.googleapis.com/css?family=Open+Sans|Nunito:400,600" rel="stylesheet">
		<meta name="viewport" content="width=device-width, initial-scale=1">
	{% endblock %}

	{% block sidebar %}
		{% include "sidebar/sidebar.html.twig" %}
	{% endblock %}
	<div class="content">
		<div class="form-group">
			{{ form_start(form) }}
			<div class="form-input js-form-input">
				<label class="form-input__label">ajouter une categorie</label>

				{{ form_widget(form.name, {'attr': {'type': 'text', 'class': 'form-input__input'}}) }}
			</div>
		</div>
		<div class="form-group">
			<div class="form-select js-form-select">
				<label class="form-select__label">Parent</label>

				{{ form_widget(form.parent, {'attr': {'type': 'select', 'class': 'form-select__select'}}) }}


			</div>
		</div>


		<div class="form-group">
			{{ form_widget(form.Valider, {'attr': {'type': 'submit', 'class': 'btn'}}) }}
		</div>
		{{ form_end(form) }}
	</div>

{% endblock %}
{% block javascripts %}

	<script>
		$(function () {
$('.js-form-input').formInput();
$('.js-form-select').formSelect({textClass: 'form-select__text'});

$('.js-mask-phone').inputmask('+7 999 999 99 99', {
jitMasking: 3,
showMaskOnHover: false
});
});
	</script>
	<script src="https://code.jquery.com/jquery-2.2.4.min.js"></script>
	<script src="https://rawgit.com/kbychkov/jquery.form-input/master/src/jquery.form-input.js"></script>
	<script src="https://cdn.rawgit.com/kbychkov/jquery.form-select/ee6a9df6/src/jquery.form-select.js"></script>
{% endblock %}
