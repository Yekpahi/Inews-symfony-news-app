{% extends 'base.html.twig' %}

{% block title %}Ajouter une cat√©gorie
{% endblock %}

{% block body %}

	<div id="app">
		<div class="container mt-5">
			{{ form_start(form) }}

			<div class="form-group">
				<label>Catogry Name</label>
				{{ form_widget(form.name, {'attr': {'type': 'text', 'class': 'form-control', 'placeholder': 'Nom'}}) }}
			</div>
			<div class="form-group">
				<label>Parent</label>
				{{ form_widget(form.parent)}}
			</div>
			<div class="form-group w-100">
				{{ form_widget(form.Valider, {'attr': {'type': 'submit', 'class': 'btn btn-primary btn-block'}}) }}

			</div>

			{{ form_end(form) }}
			<table class="table table-hover">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Name</th>
						<th scope="col">Edit</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<th scope="row"></th>
						<td scope="row"></td>
						<td scope="row">
							<div class="btn btn-sm btn-danger">
								<i class="fa fa-trash-o" aria-hidden="true"></i>
							</div>
						</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>


{% endblock %}
