{% extends 'base.html.twig' %}

{% block title %}Ajouter un article!
{% endblock %}


{% block body %}

	{% block stylesheets %}
		<link rel="stylesheet" type="text/css" href=" {{asset ('assets/css/create-article/create-article.css')}}"/>
		<link
		href="/your-path-to-fontawesome/css/all.css" rel="stylesheet">
		<!--load all styles -->
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
	{% endblock %}

	<!-- Debut  Side bar -->
	{% block sidebar %}
		{% include "sidebar/sidebar.html.twig" %}
	{% endblock %}
	<!-- Fin  Side bar -->
	<div class="main">
		<div class="container">
			{{ form_start(form, {'attr': {'class': 'form'}}) }}

			<div class="titre-sous-titre">
				{{ form_widget(form.title, {'attr' : {'type' : 'text', "placeholder" : "Titre de l'article",'data-rule-required':'true' }}) }}
				{{ form_widget(form.description, {'attr' : {'type' : 'text', "placeholder" : "Sous-titre de l'article",'data-rule-required':'true' }}) }}

			</div>
			<div class="categorie">
				<h5>Choisir une Categorie</h5>

				{{ form_widget(form.categories, {'attr' : {'type' : 'dropdown', 'row': '4', 'style' : "height:auto", 'id' : 'redact', 'class' : 'round', 'placeholder' : "Redigez votre article",'data-rule-required':'true'}}) }}
				<h5>Choisir un statut
				</h5>
				{{ form_widget(form.statut, {'attr' : {'type' : 'dropdown', 'row': '4', 'style' : "height:auto", 'id' : 'redact', 'class' : 'round'}}) }}
				{{ form_widget(form.active, {'attr' : {'type' : 'checkbox', 'name': 'scales', 'style' : "height:auto", 'id' : 'scales'}}) }}
				<label for="scales" style=" margin: .4rem">publi√©</label>
			</div>
			<div class="redaction-article">

				{{ form_widget(form.content, {'attr' : {'type' : 'textarea', 'row': '4', 'style' : "height:auto", 'id' : 'article', 'class' : 'form-input', 'placeholder' : "Redigez votre article",'data-rule-required':'true'}}) }}

			</div>
			<div class="url-article">
				<h5 for="">Url de l'image</h5>
				<input type="text" placeholder="url ici ...">
			</div>
			<!--Charger fichier-->
			<div class="charger-article">
				<div>
					<label for="myinput" class="btn btn-success">
						Charger le(s) fichier(s)
						{{ form_widget(form.images, {'attr' : {'type' : 'file',  "multiple":"multiple",  'id' : 'myinput', 'class' : 'form-input', 'placeholder' : "Redigez votre article",'data-rule-required':'true'}}) }}
						<input id="myinput" type="file" onchange="myfun()" multiple="multiple">
					</label>
				</div>

				<div id="showImg"></div>

				<!-- modal for edit remark -->
				<div id="showModelB4Del_removeImg" class="px-2 py-2">
					<h4>Voulez-vous vraiment supprimer l'image?</h4>
					<div class="d-flex">
						<a href="javascript:void(0)" id="yesDelContact" class="btn btn-success mr-3">Yes</a>
						<!-- <a href="javascript:void(0)" id='NoDelContact' class="btn btn-danger">No</a> -->
					</div>
					<span class="closModalMsg" id='closModalMsg'>X</span>
				</div>
			</div>
			<!--Fin charger fichier-->
			{{ form_widget(form.Valider, {'attr' : {'type' : 'submit', 'row': '4', 'style' : "height:auto", 'id' : 'article', 'class' : 'button-poster-article'}}) }}

			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}
{% block javascripts %}


	<script src="{{ asset ('assets/script/create-article/create-article.js') }}"></script>
	<script src="{{ asset('assets/script/images.js') }}"></script>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js" integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT" crossorigin="anonymous"></script>
{% endblock %}
