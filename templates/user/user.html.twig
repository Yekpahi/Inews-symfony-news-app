{% extends 'base.html.twig' %}

{% block title %}Ajouter un article!
{% endblock %}

{% block body %}

	{% block stylesheets %}
		<!--load all styles -->
		<link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet"/>
		<link rel="stylesheet" type="text/css" href=" {{asset ('assets/css/user/user.css')}}"/>
	{% endblock %}

	<!--- Header -->

	<!-- Debut header-->
	{% block header %}
		{% include "header/header.html.twig" %}
	{% endblock %}


	<!--- Fin Header -->
	{% if app.user %}
		{% block myprofile %}
			{% include "user/myprofile.html.twig" %}
		{% endblock %}
	{% elseif user %}
		{% block visiteur %}
			{% include "user/visiteur.html.twig" %}
		{% endblock %}
	{% else %}
		<h2>
			Connectez vous d'aborder pour voir ce profil</h2>
	{% endif %}

{% endblock %}
