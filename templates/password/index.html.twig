{% extends 'base.html.twig' %}

{% block title %}Changer le mot de passe
{% endblock %}

{% block body %}

	{% block stylesheets %}
		<link rel="stylesheet" type="text/css" href=" {{asset ('assets/css/user/motdepass.css')}}"/>
		<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet"/>

	{% endblock %}

	<div class="container">
		{% for message in app.flashes('error') %}
			<div class="col-xs4">
				<div class="p-3 my-2 rounded-2 error"></div>
			</div>

			<div class="alert alert-secondary" role="alert">

				{{message}}
			</div>
		{% endfor %}

		<form method="post">
			<p class="shpass">
				<label for="password">Ancien mot de passe:
				</label>
				<input type="password" name="password" id="password" autocomplete="current-password">
				<button type="button" aria-controls="password" aria-label="Show password" disabled>
					<svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="32" height="32" viewbox="0 0 32 32">
						<path d="m16 6.77c-6.82 0-13.3 3.24-15.7 9.2 2.36 5.99 8.88 9.2 15.7 9.2s13.3-3.24 15.7-9.2c-2.36-5.99-8.88-9.2-15.7-9.2zm0 15c-3.76 0-5.82-2.06-5.82-5.82s2.05-5.82 5.82-5.82 5.82 2.05 5.82 5.82c0 3.76-2.05 5.82-5.82 5.82zm0-9.3c-2.26 0-3.49 1.23-3.49 3.49s1.23 3.49 3.49 3.49 3.49-1.23 3.49-3.49-1.23-3.49-3.49-3.49z"/>
						<path d="m25.1 3.69-21.4 21.4s-1.37 1.69 0 3.21 3.21 0 3.21 0l21.4-21.4s1.93-2.17 0.394-3.61-3.6 0.395-3.6 0.395z"/>
					</svg>
				</button>
			</p>
			<p class="shpass">
				<label for="pass1">Nouveau mot de passe:
				</label>
				<input type="password" name="pass1" id="pass1" autocomplete="new-password">
				<button type="button" aria-controls="pass1" aria-label="Show password" disabled>
					<svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="32" height="32" viewbox="0 0 32 32">
						<path d="m16 6.77c-6.82 0-13.3 3.24-15.7 9.2 2.36 5.99 8.88 9.2 15.7 9.2s13.3-3.24 15.7-9.2c-2.36-5.99-8.88-9.2-15.7-9.2zm0 15c-3.76 0-5.82-2.06-5.82-5.82s2.05-5.82 5.82-5.82 5.82 2.05 5.82 5.82c0 3.76-2.05 5.82-5.82 5.82zm0-9.3c-2.26 0-3.49 1.23-3.49 3.49s1.23 3.49 3.49 3.49 3.49-1.23 3.49-3.49-1.23-3.49-3.49-3.49z"/>
						<path d="m25.1 3.69-21.4 21.4s-1.37 1.69 0 3.21 3.21 0 3.21 0l21.4-21.4s1.93-2.17 0.394-3.61-3.6 0.395-3.6 0.395z"/>
					</svg>
				</button>
			</p>
			<p class="shpass">
				<label for="pass2">Confirmez le mot de passe:
				</label>
				<input type="password" name="pass2" id="pass2" autocomplete="new-password">
				<button type="button" aria-controls="pass2" aria-label="Show password" disabled>
					<svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="32" height="32" viewbox="0 0 32 32">
						<path d="m16 6.77c-6.82 0-13.3 3.24-15.7 9.2 2.36 5.99 8.88 9.2 15.7 9.2s13.3-3.24 15.7-9.2c-2.36-5.99-8.88-9.2-15.7-9.2zm0 15c-3.76 0-5.82-2.06-5.82-5.82s2.05-5.82 5.82-5.82 5.82 2.05 5.82 5.82c0 3.76-2.05 5.82-5.82 5.82zm0-9.3c-2.26 0-3.49 1.23-3.49 3.49s1.23 3.49 3.49 3.49 3.49-1.23 3.49-3.49-1.23-3.49-3.49-3.49z"/>
						<path d="m25.1 3.69-21.4 21.4s-1.37 1.69 0 3.21 3.21 0 3.21 0l21.4-21.4s1.93-2.17 0.394-3.61-3.6 0.395-3.6 0.395z"/>
					</svg>
				</button>
			</p>
			<button type="submit">Envoyer</button>
		</form>
	</div>

{% endblock %}

{% block javascripts %}
	<script src="{{ asset ('assets/script/user/motdepass.js')}}"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.2/jquery.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.1/js/bootstrap-datepicker.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/4.3.1/js/fileinput.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
	<script src=" {{asset ('assets/script/user/editProfile.js')}}"></script>
{% endblock %}
